<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/logo_grayscale"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="@dimen/text"
            android:text="Lemon peel Base ball" />

        <LinearLayout
            android:id="@+id/linear_ukuran_warna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/textSub"
                android:textSize="@dimen/textsub"
                android:text="Ukuran / Warna:"
                android:textColor="@color/Tex"
                android:paddingRight="10dp" />


            <TextView
                android:id="@+id/ukuran_warna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/textSub"
                android:textSize="@dimen/textsub"
                android:text="L / KUNING"
                android:lines="1"
                android:textColor="@color/Tex" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsub"
                android:text="3 Pcs"
                android:textColor="@color/Tex"  />

            <TextView
                android:id="@+id/txtHargaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @ Rp 250.00"
                android:layout_marginRight="5dp"
                android:textColor="@color/Tex"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/txtCutpriceHargaJual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 10.000"
                android:layout_marginRight="10dp"
                android:textColor="@color/textSub"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/txtCutpriceHargaDiskon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(10%)"
                android:layout_marginRight="10dp"
                android:textColor="@color/textSub"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/ket_grosir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Grosir"
                android:textSize="@dimen/textsub"
                android:textStyle="italic"
                android:textColor="@color/global_color_green_primary_dark" />

            <TextView
                android:id="@+id/total"
                android:textSize="@dimen/textsub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Rp. 10.000"
                android:gravity="right"
                android:textColor="@color/Tex" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
