<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/category_atas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider" />

            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/image_atas"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_grayscale"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"  />

            <TextView
                android:id="@+id/title_atas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tshirt"
                android:layout_gravity="top|center_horizontal"
                android:textSize="10dp"
                android:textColor="@color/category_textcolour"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colordevider" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/category_bawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider" />

            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/image_bawah"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_grayscale"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"  />

            <TextView
                android:id="@+id/title_bawah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tshirt"
                android:layout_gravity="top|center_horizontal"
                android:textSize="10dp"
                android:textColor="@color/category_textcolour"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colordevider" />

    </LinearLayout>

</LinearLayout>
