              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llImageBG"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
