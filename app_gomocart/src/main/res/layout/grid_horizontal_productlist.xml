<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:background="@drawable/bottom_shadow"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/card_shadow"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/logo_grayscale" />

            <LinearLayout
                android:id="@+id/toolbar_layout_set_wishlist"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fav1"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/fav1" />

                    <ImageView
                        android:id="@+id/fav2"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/fav2"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_soldout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    card_view:cardBackgroundColor="@color/produk_soldout"
                    card_view:cardElevation="@dimen/card_tag_shadow"
                    card_view:cardUseCompatPadding="false">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Habis"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsub" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    card_view:cardBackgroundColor="@color/produk_new"
                    card_view:cardElevation="@dimen/card_tag_shadow"
                    card_view:cardUseCompatPadding="false">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="NEW"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsub" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_grosir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    card_view:cardBackgroundColor="@color/produk_grosir"
                    card_view:cardElevation="@dimen/card_tag_shadow"
                    card_view:cardUseCompatPadding="false">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Grosir"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsub" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_preorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    card_view:cardBackgroundColor="@color/produk_po"
                    card_view:cardElevation="@dimen/card_tag_shadow"
                    card_view:cardUseCompatPadding="false">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="PO"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsub" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    card_view:cardBackgroundColor="@color/produk_diskon"
                    card_view:cardElevation="@dimen/card_tag_shadow"
                    card_view:cardUseCompatPadding="false">

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsub" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_freeongkir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    card_view:cardBackgroundColor="@color/produk_freeongkir"
                    card_view:cardElevation="@dimen/card_tag_shadow"
                    card_view:cardUseCompatPadding="false">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Free Ongkir"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsub" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_cod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    card_view:cardBackgroundColor="@color/produk_cod"
                    card_view:cardElevation="@dimen/card_tag_shadow"
                    card_view:cardUseCompatPadding="false">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="COD"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsub" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Canvera Black Heel"
                android:textColor="@color/Tex"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15,000 Rs"
                    android:textColor="@color/divider"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/textsub"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cutprice_harga_jual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17,000 Rs"
                    android:textColor="@color/textSub"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/textsub" />

                <!-- TextView
                    android:id="@+id/cutprice_harga_diskon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(10%)"
                    android:textColor="@color/textSub"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/textsub" / -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>