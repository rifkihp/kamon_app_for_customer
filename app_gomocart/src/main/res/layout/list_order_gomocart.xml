<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bottom_shadow"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/card_shadow"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_no_pesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No. Pesan"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:id="@+id/no_pesanan"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/divider"
                    android:textSize="@dimen/textsub" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_toko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Beli Dari"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:id="@+id/nama_toko"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_ekspedisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kurir"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:id="@+id/ekspedisi"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/linear_no_resi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No. Resi"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:id="@+id/no_resi"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub" />
                
                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub"
                    android:textStyle="bold"/>
                
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#f2f3f4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_pembelian"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:text="Total Pembelian: 2 Pcs"
                android:textColor="@color/Tex"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/total_pembayaran"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:text="Pembayaran: Rp. 220.000"
                android:textColor="@color/Tex"
                android:textSize="@dimen/textsub" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/batal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_divider"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Batal"
                android:textColor="@color/white"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/bayar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_divider"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Bayar"
                android:textColor="@color/white"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/lacak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_divider"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Lacak"
                android:textColor="@color/white"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/terima"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_divider"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Terima"
                android:textColor="@color/white"
                android:textSize="@dimen/textsub" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_divider"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Rincian"
                android:textColor="@color/white"
                android:textSize="@dimen/textsub" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>