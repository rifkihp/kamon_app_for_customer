<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/checkBoxStyle" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/logo_grayscale"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:maxLines="2"
                        android:textColor="#000000"
                        android:textSize="@dimen/text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Lemon peel Base ball"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cross_delete"
                        android:paddingLeft="10dp"
                        android:id="@+id/hapus" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_stok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/minus"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="01"
                        android:textSize="@dimen/textsub"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/Tex"
                        android:padding="5dp"/>

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp" />

                    <View
                        android:id="@+id/separator_ukuran"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:id="@+id/ukuran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Ukuran"
                        android:textColorHint="@color/textSub"
                        android:background="#00000000"
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/textsub"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:lines="1" />

                    <View
                        android:id="@+id/separator_warna"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:id="@+id/warna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Warna"
                        android:textColorHint="@color/textSub"
                        android:background="#00000000"
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/textsub"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:lines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtHargaProduk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 250.00"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/textsub" />

                    <TextView
                        android:id="@+id/txtCutpriceHargaJual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 10.000"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/textSub"
                        android:textSize="@dimen/textsub" />

                    <TextView
                        android:id="@+id/txtCutpriceHargaDiskon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(10%)"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/textSub"
                        android:textSize="@dimen/textsub" />

                    <TextView
                        android:id="@+id/ket_grosir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Grosir"
                        android:textSize="@dimen/textsub"
                        android:textStyle="italic"
                        android:textColor="@color/global_color_green_primary_dark" />

                    <TextView
                        android:id="@+id/total"
                        android:textSize="@dimen/textsub"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Rp. 10.000"
                        android:gravity="right"
                        android:textColor="@color/Tex" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/linear_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">



            <TextView
                android:id="@+id/jam"
                android:textSize="@dimen/textsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:background="@color/Tex"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/menit"
                android:textSize="@dimen/textsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:background="@color/Tex"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/detik"
                android:textSize="@dimen/textsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:background="@color/Tex"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/expirationTime"
                android:textSize="@dimen/textsub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:background="@color/Tex"
                android:padding="5dp"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
