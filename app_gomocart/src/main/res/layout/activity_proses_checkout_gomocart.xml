<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProsesCheckoutActivity"
    android:background="@color/white" >

    <include
        layout="@layout/toolbar_activity_proses_checkout_gomocart"
        android:id="@+id/toolbar"></include>

    <LinearLayout
        android:id="@+id/linear_indikator"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" >

        <ImageView
            android:id="@+id/image_step_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/checkout_step_1_aktif" />

        <View
            android:id="@+id/line_step_2_aktif"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#308c8e"
            android:layout_gravity="center_vertical" />

        <View
            android:id="@+id/line_step_2_inaktif"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/image_step_2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/checkout_step_2" />

        <View
            android:id="@+id/line_step_3_aktif"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#308c8e"
            android:layout_gravity="center_vertical" />

        <View
            android:id="@+id/line_step_3_inaktif"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/image_step_3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/checkout_step_3" />

        <View
            android:id="@+id/line_step_4_aktif"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#308c8e"
            android:layout_gravity="center_vertical" />

        <View
            android:id="@+id/line_step_4_inaktif"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/image_step_4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/checkout_step_4" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_indikator" />

</RelativeLayout>