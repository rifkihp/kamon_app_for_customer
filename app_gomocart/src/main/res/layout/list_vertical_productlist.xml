<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_shadow"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/card_shadow"
    card_view:cardUseCompatPadding="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo_grayscale" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <ImageView
                                android:id="@+id/fav1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/f0" />

                            <ImageView
                                android:id="@+id/fav2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/f4"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_soldout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_bottom"
                            card_view:cardBackgroundColor="@color/produk_soldout"
                            card_view:cardElevation="@dimen/card_tag_shadow"
                            card_view:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/linear_soldout"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="@color/produk_soldout"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Habis"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsub" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_bottom"
                            card_view:cardBackgroundColor="@color/produk_new"
                            card_view:cardElevation="@dimen/card_tag_shadow"
                            card_view:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/linear_new"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="@color/produk_new"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="NEW"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsub" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_grosir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_bottom"
                            card_view:cardBackgroundColor="@color/produk_grosir"
                            card_view:cardElevation="@dimen/card_tag_shadow"
                            card_view:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/linear_grosir"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="@color/produk_grosir"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Grosir"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsub" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_preorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_bottom"
                            card_view:cardBackgroundColor="@color/produk_po"
                            card_view:cardElevation="@dimen/card_tag_shadow"
                            card_view:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/linear_preorder"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="@color/produk_po"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="PO"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsub" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_bottom"
                            card_view:cardBackgroundColor="@color/produk_diskon"
                            card_view:cardElevation="@dimen/card_tag_shadow"
                            card_view:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/linear_discount"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="@color/produk_diskon"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/discount"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="0%"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsub" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_freeongkir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_bottom"
                            card_view:cardBackgroundColor="@color/produk_freeongkir"
                            card_view:cardElevation="@dimen/card_tag_shadow"
                            card_view:cardUseCompatPadding="false">

                            <LinearLayout
                                android:id="@+id/linear_freeongkir"
                                android:layout_width="70dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="@color/produk_freeongkir"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Free Ongkir"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsub" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Canvera Black Heel"
                    android:textColor="@color/Tex"
                    android:textSize="15dp" />

                <!-- LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false" />

                    <TextView
                        android:id="@+id/ratingtext"
                        android:layout_marginLeft="6dp"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="(1400)"
                        android:layout_gravity="bottom"
                        android:textColor="@color/textSub"
                        android:layout_marginTop="1dp" />
                </LinearLayout -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:paddingBottom="5dp"
                        android:text="15,000 Rs"
                        android:textColor="@color/divider"
                        android:textSize="@dimen/textsub"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cutprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:text="17,000 Rs"
                        android:textColor="@color/textSub"
                        android:textSize="@dimen/textsub" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <!-- LinearLayout
                        android:id="@+id/linear_soldout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/bg_soldout" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Habis"
                                android:textColor="#fff"
                                android:layout_gravity="center" />

                        </FrameLayout>
                    </LinearLayout -->


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>