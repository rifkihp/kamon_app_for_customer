<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_shadow"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/card_shadow"
    card_view:cardUseCompatPadding="false">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <gomocart.application.com.libs.ResizableImageView
                android:id="@+id/imgInformasi"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_grayscale" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtJudul"
                    android:maxLines="2"
                    android:textColor="#000000"
                    android:textSize="@dimen/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lemon peel Base ball"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/txtTanggal"
                    android:textSize="@dimen/textsub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-08-2017 11:11:00"
                    android:layout_below="@+id/txtJudul"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/Tex" />

                <TextView
                    android:id="@+id/txtKeterangan"
                    android:textSize="@dimen/textsub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last message..."
                    android:layout_below="@+id/txtTanggal"
                    android:textColor="@color/Tex"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"  />


                
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>