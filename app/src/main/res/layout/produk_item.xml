<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical" >

	<kamoncust.application.com.libs.ResizableImageView
		android:id="@+id/gambar_produk"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/body_background"
	    android:scaleType="fitXY"
	    android:src="@drawable/logo_grayscale" />

	<TextView
	    android:id="@+id/nama_produk"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"	    
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:gravity="left"
	    android:text="@string/produk_dashboard_item_title"
	    android:textColor="@color/year" />

	<TextView
	    android:id="@+id/special_price"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="5dp"
	    android:gravity="left|center"
	    android:text="@string/produk_dashboard_item_subtitle"
	    android:textStyle="bold" />

	<TextView
	    android:id="@+id/old_price"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:gravity="left|center"
	    android:paddingBottom="10dp"
	    android:text="@string/produk_dashboard_item_subtitle"
	    android:textColor="@color/old_price"
	    android:textStyle="bold" />

</LinearLayout>