            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:text="Tshirt"
            android:textColor="@color/white"
            android:textSize="@dimen/text" />

</LinearLayout>
