<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/card_background" >

    <LinearLayout
		android:id="@+id/linearSuaraGetar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:orientation="horizontal"
		android:background="@drawable/text" >

		<ImageView
			android:id="@+id/radioSuaraGetar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/radiouncheked"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp" />

		<TextView
			android:id="@+id/txtSuaraGetar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingRight="20dp"
			android:paddingBottom="20dp"
			android:paddingLeft="10dp"
			android:text="Suara dan Getar"
			android:textColor="@color/category_textcolour"
			android:textSize="18sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearSuara"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/linearSuaraGetar"
		android:orientation="horizontal"
		android:background="@drawable/text" >

		<ImageView
			android:id="@+id/radioSuara"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/radiouncheked"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp" />

		<TextView
			android:id="@+id/txtSuara"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingRight="20dp"
			android:paddingBottom="20dp"
			android:paddingLeft="10dp"
			android:text="Suara"
			android:textColor="@color/category_textcolour"
			android:textSize="18sp" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearGetar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/linearSuara"
		android:orientation="horizontal"
		android:background="@drawable/text" >

		<ImageView
			android:id="@+id/radioGetar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/radiouncheked"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp" />

		<TextView
			android:id="@+id/txtGetar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingRight="20dp"
			android:paddingBottom="20dp"
			android:paddingLeft="10dp"
			android:text="Getar"
			android:textColor="@color/category_textcolour"
			android:textSize="18sp" />

	</LinearLayout>

</RelativeLayout>