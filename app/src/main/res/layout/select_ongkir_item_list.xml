<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff"
    android:elevation="2dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:src="@drawable/logo_grayscale"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="JNE\nYakin Esok Sampai (YES)\nRp. 10,000"
            android:gravity="left|top"
            android:textSize="@dimen/textsub"
            android:textColor="@color/category_textcolour"
            android:layout_margin="10dp" >
        </TextView>

        <ImageView
            android:id="@+id/radioSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radiouncheked"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>
</LinearLayout>
